{
	"name": "polar-init",
	"version": "0.3.0",
	"license": "Apache-2.0",
	"bin": "bin/cli.js",
	"type": "module",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"build": "pnpm run copy:templates && tsup ./src/cli.tsx --format esm",
		"dev": "pnpm run copy:templates && tsc --watch",
		"lint": "xo",
		"lint:fix": "xo --fix",
		"test": "vitest",
		"fmt": "prettier ./src --write",
		"copy:templates": "mkdir -p dist/templates && cp -r templates dist"
	},
	"files": [
		"dist",
		"bin"
	],
	"dependencies": {
		"@inkjs/ui": "^2.0.0",
		"@types/cross-spawn": "^6.0.6",
		"cross-spawn": "^7.0.6",
		"ink": "^6.0.1",
		"ink-link": "^4.1.0",
		"listr": "^0.14.3",
		"meow": "^11.0.0",
		"next": "^15.3.4",
		"open": "^10.1.2",
		"prompts": "^2.4.2",
		"react": "^19.1.0",
		"tsup": "^8.5.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.6",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/listr": "^0.14.9",
		"@types/prompts": "^2.4.9",
		"@types/react": "^19.1.8",
		"@vdemedes/prettier-config": "^2.0.1",
		"chalk": "^5.4.1",
		"eslint-config-xo": "^0.47.0",
		"eslint-config-xo-react": "^0.28.0",
		"eslint-config-xo-typescript": "^8.0.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4",
		"xo": "^1.1.1"
	},
	"prettier": {
		"useTabs": true,
		"semi": true,
		"singleQuote": false,
		"quoteProps": "as-needed",
		"bracketSpacing": false,
		"arrowParens": "avoid",
		"trailingComma": "all"
	}
}
